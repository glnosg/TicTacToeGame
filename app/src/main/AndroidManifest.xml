<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tictacgrid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Menus.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Game.GameActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name=".Menus.SinglePlayerMenuActivity"
            android:label="@string/title_activity_multiplayer_custom"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".Menus.MultiplayerMenuActivity"
            android:label="@string/title_activity_multiplayer_menu"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity android:name=".Menus.StandardMultiplayerSettingsActivity"
            android:label="@string/title_activity_multiplayer_standard"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity android:name=".Menus.CustomMultiplayerSettingsActivity"
            android:label="@string/title_activity_multiplayer_custom"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

    </application>

</manifest>